{
  "include": ["src/**/*"],
  "compilerOptions": {
    "allowJs": true, // allow js for now while migrating. Remove once all js is converted.
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    // "checkJs": true,
    "jsx": "react",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true
  }
}
